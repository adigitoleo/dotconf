layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
        children
    }

    tab name="todo" focus=true {
        pane cwd="vcs/todo"
    }
    tab name="calendar" {
        pane command="calcurse"
    }
    tab name="music" split_direction="horizontal" {
        pane cwd="/tmp" command="cava" borderless=true
        pane cwd="Music" focus=true
    }
    tab name="calc" {
        pane command="julia" {
            args "--banner=no"
        }
    }
}
