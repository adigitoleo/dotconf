[options]
overlay_font = Monospace:11
suppress_default_binds = true

[aliases]
# Aliases support arbitrary arguments.
# alias = command to run
copy = exec realpath --relative-to=$HOME $imv_current_file|wl-copy --primary --trim-newline

[binds]
# Define some key bindings
q = quit

# Image navigation
<Left> = prev
p = prev
<Right> = next
n = next
gg = goto 1
<Shift+G> = goto -1

# Panning
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
o = zoom -1

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90

# Other commands
x = close
f = fullscreen
d = overlay
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
