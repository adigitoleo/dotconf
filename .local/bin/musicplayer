#!/bin/sh
# Play a list of music files from stdin using ffplay(1)

trap 'exit' INT
if [ $# -gt 0 ]; then
    for file in "$@"; do
        ffplay -vn -sn -nodisp -autoexit -hide_banner "$file";
    done
else
    while IFS= read -r file; do
        ffplay -vn -sn -nodisp -autoexit -hide_banner "$file";
    done
fi
